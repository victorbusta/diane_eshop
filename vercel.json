{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "buildCommand": "npm install --production" }
    },
    {
      "src": "prisma/schema.prisma",
      "use": "prisma"
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "src/main.ts"
    }
  ],
  "env": {
    "PRISMA_GENERATE": "true"
  }
}
